<div class="container grid-striped">
    <div class="row font-weight-bold py-2">
        <div class="col">
            #
        </div>
        <div class="col">
            Type
        </div>
        <div class="col">
            Title
        </div>
        <div class="col-6">
            Content
        </div>
        <div class="col-2">
            Updated
        </div>
    </div>
    @foreach (var log in Model.ChangeLogModels)
    {
        <div class="row py-2">
            <div class="col">
                @log.No
            </div>
            <div class="col">
                @log.Type
            </div>
            <div class="col">
